{
    "name": "phoole/base",
    "type": "library",
    "license": "Apache-2.0",
    "version": "1.0.17",
    "description": "Base library for other Phoole project",
    "keywords": ["php", "library", "phoole", "swoole"],
    "authors": [
        {
            "name": "Hong Zhang",
            "homepage": "https://github.com/phoole"
        }
    ],
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": { "Phoole\\Base\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Phoole\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs --standard=psr12 src/",
        "format": "phpcbf --standard=psr12 src/"
    }
}